<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="20dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnpublicApi_startRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REQ PUBLIC API"/>

    <TextView
        android:id="@+id/txt_publicApi_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="RESULT PUBLIC API"/>

    <Button
        android:id="@+id/btnyouTubeApi_startRequest"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REQ YT API"/>

    <TextView
        android:id="@+id/txt_youTubeApi_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="RESULT YT API"/>

</LinearLayout>
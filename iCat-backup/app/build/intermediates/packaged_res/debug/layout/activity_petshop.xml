<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/id_mainLayoutPetshop"
    android:orientation="vertical"
    tools:context=".PetshopActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="40dp"
        android:gravity="center"
        android:background="@color/white"
        android:elevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Petshop"
                android:textStyle="bold"
                android:textSize="32dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kamu bisa berbelanja kebutuhan hewan peliharaanmu!"
                android:textSize="16dp"/>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/id_btnKeranjang"
            android:layout_width="60dp"
            android:layout_height="60dp">

            <ImageButton
                android:id="@+id/id_btnlokasiku"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_cart"
                android:stateListAnimator="@null"
                android:background="@drawable/rounded_btn_menu_blue"/>

            <com.nex3z.notificationbadge.NotificationBadge
                android:id="@+id/id_badge"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="top|right"
                app:nbMaxTextLength="2"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/id_recyclerPetshop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
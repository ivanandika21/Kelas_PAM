<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LayananActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageSwitcher
            android:id="@+id/carouselImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inAnimation="@android:anim/fade_in"
            android:outAnimation="@android:anim/fade_out"/>

        <ImageButton
            android:id="@+id/carouselBefore"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/carouselImage"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_before" />

        <ImageButton
            android:id="@+id/carouselNext"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/carouselImage"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_next" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingHorizontal="40dp"
        android:paddingBottom="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="32dp"/>

        <TextView
            android:id="@+id/id_deskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."
            android:textColor="@color/white"
            android:textSize="16dp"/>
    </LinearLayout>
</FrameLayout>
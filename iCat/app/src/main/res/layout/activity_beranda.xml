<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/section1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/imageProfil"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/profil_user"
                android:layout_margin="10dp"
                />

            <!--  bagian teks input email  -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageProfil"
                android:layout_centerVertical="true"
                >

                <TextView
                    android:id="@+id/txtHello"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Halo, "
                    android:textSize="22sp"
                    />
                <TextView
                    android:id="@+id/txtAlamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kec. Sidomukti Salatiga"
                    android:textSize="14sp"
                    android:layout_below="@+id/txtHello"
                    />
            </RelativeLayout>
        </RelativeLayout>

        <!--  carousel  -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/section1"
            android:gravity="center"
            >

            <ImageButton
                android:id="@+id/carouselBefore"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_before"
                android:layout_alignStart="@+id/carouselImage"
                android:layout_centerVertical="true"
                />

            <ImageSwitcher
                android:id="@+id/carouselImage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:inAnimation="@android:anim/slide_in_left"
                android:outAnimation="@android:anim/slide_out_right"
                />

            <ImageButton
                android:id="@+id/carouselNext"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_next"
                android:layout_alignEnd="@+id/carouselImage"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
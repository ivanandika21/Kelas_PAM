<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroomingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="40dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Grooming"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="32dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih layanan terbaik untuk kucingmu!"
                android:textColor="@color/black"
                android:textSize="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="40dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jenis Grooming"/>
                <RadioGroup
                    android:id="@+id/id_jenisGrooming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">
                    <RadioButton
                        android:id="@+id/id_layananStandar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Grooming Standar"/>
                    <RadioButton
                        android:id="@+id/id_layananMedical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Grooming Medical"/>
                    <RadioButton
                        android:id="@+id/id_layananHealth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Grooming Health"/>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jenis Layanan"/>
                <CheckBox
                    android:id="@+id/id_layananNail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nail Care"/>
                <CheckBox
                    android:id="@+id/id_layananTitip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Penitipan" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jenis Kucing"/>
                <RadioGroup
                    android:id="@+id/id_jenisKucing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">
                    <RadioButton
                        android:id="@+id/id_bulupendek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bulu Pendek"/>
                    <RadioButton
                        android:id="@+id/id_bulupanjang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bulu Panjang"/>
                </RadioGroup>
            </LinearLayout>
            <Button
                android:id="@+id/id_btnkemaps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="40dp"
                android:background="@drawable/rounded_btn"
                android:stateListAnimator="@null"
                android:text="Pilih Alamat"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>